PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5000
LOG_LEVEL=debug

# ── Huawei Cloud RDS (PostgreSQL) ──
# Format: postgresql://<username>:<password>@<rds-endpoint>:<port>/<database>
# Get the endpoint from Huawei Cloud Console → RDS → Instance → Connection Information
DATABASE_URL=postgresql://root:YourPassword@xxx.rds.cn-north-4.huaweiclouddb.com:5432/pipeline_manager

# Set to "true" if your RDS instance requires SSL (recommended for production)
DB_SSL=true

# Connection pool size (adjust based on your RDS instance specs)
DB_POOL_MAX=10
